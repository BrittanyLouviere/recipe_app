<p id="notice"><%= notice %></p>

<h1>Ingredients</h1>

<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @ingredients.each do |ingredient| %>
      <tr>
        <td><%= link_to ingredient.name, ingredient, class: "btn-link" %></td>
        <td><%= link_to 'Edit', edit_ingredient_path(ingredient), class: "btn-link" %></td>
        <td><%= link_to 'Destroy', ingredient, class: "btn-link", method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Ingredient', new_ingredient_path, class: "btn-link" %>
