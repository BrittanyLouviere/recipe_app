<p id="notice"><%= notice %></p>

<h1>Recipes</h1>

<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @recipes.each do |recipe| %>
      <tr>
        <td><%= link_to recipe.name, recipe, class: "btn-link" %></td>
        <td><%= link_to 'Edit', edit_recipe_path(recipe), class: "btn-link" %></td>
        <td><%= link_to 'Destroy', recipe, class: "btn-link", method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Recipe', new_recipe_path, class: "btn-link" %>
