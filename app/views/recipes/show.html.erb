<p id="notice"><%= notice %></p>

<h1><%= @recipe.name %></h1>

<h3>Ingredients:</h3>
<ul>
  <% @recipe.ingredientsJoin.each do |join| %>
    <li><%= join.ingredient_name %><% if !join.amount.blank? %> (<%= join.amount %>)<% end %></li>
  <% end %>
</ul>

<h3>Instructions:</h3>
<div class="panel panel-default">
  <div id="recipe-instructions-show" class="panel-body"><%= @recipe.instructions %></div>
</div>


<%= link_to 'Edit', edit_recipe_path(@recipe), class: "btn-link" %> |
<%= link_to 'Back', recipes_path, class: "btn-link" %>
